<div class="login-page">
  <div class="load-screen">
    <div id="navbar-react-mount"></div>
    <div class="login-body">
      <div class="login-container">
        <h1>Sign in</h1>
        <%= simple_form_for resource, as: resource_name, url: session_path(resource_name), html: { id: 'login-form' } do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        placeholder: 'email',
                        label: false,
                        hint: false,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: true,
                        placeholder: 'password',
                        label: false,
                        hint: false,
                        input_html: { autocomplete: "current-password" } %>
          </div>

          <div class="form-actions">
            <%= f.button  :submit, "Sign in", class: "btn-secondary-small" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div id="footer-react-mount"></div>
</div>

<% content_for :after_js do %>
  <%= javascript_pack_tag "login" %>
<% end %>
